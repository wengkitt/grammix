{
  "manifest_version": 3,
  "name": "Grammar Corrector",
  "version": "1.0",
  "description": "Highlight text and correct grammar using Google Gemini 2.0 Flash Lite.",
  "permissions": ["contextMenus", "storage", "activeTab", "clipboardWrite"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "src/extension/popup.html",
    "default_title": "Grammar Corrector"
  }
}
